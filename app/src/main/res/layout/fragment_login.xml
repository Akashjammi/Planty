<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    >

    <TextView
        android:id="@+id/Green_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:text="Your home.Greener"
        android:textColor="#2d3436"
        android:textSize="24dp"

        />

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Green_tv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:text="Enjoy the experience"
        android:textColor="#b2bec3"
        android:textSize="15dp"

        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/ill"
        android:layout_centerInParent="true"/>

    <LinearLayout
        android:layout_marginBottom="10dp"
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:layout_above="@id/signup_l"
        android:background="@drawable/gradient_button"
        android:gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginVertical="10dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="LOGIN"
            android:textColor="#FFFFFF"

            android:textSize="14dp"


            />
    </LinearLayout>
    <LinearLayout
        android:visibility="invisible"
        android:id="@+id/signup_l"

        android:layout_marginHorizontal="30dp"
android:layout_marginBottom="@dimen/margin_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"

        >

        <TextView
            android:id="@+id/signup"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginVertical="20dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="Sign Up"
            android:textColor="#2d3436"

            android:textSize="14dp"


            />
    </LinearLayout>

</RelativeLayout>