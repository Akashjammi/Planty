<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:id="@+id/l1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <com.planty.app.customviews.F1TextViewRegular
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="I am categorized as"
                android:textColor="@color/bg_black"
                android:textSize="@dimen/text_small" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">


                    <CheckBox
                        android:id="@+id/manu_check"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:padding="5dp" />

                    <com.planty.app.customviews.F1TextViewRegular

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="3dp"
                        android:text="Manufacturer"
                        android:textColor="@color/text_kind_grey"
                        android:textSize="@dimen/text_small" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">


                    <CheckBox
                        android:id="@+id/reseller_check"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:padding="5dp" />

                    <com.planty.app.customviews.F1TextViewRegular
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="3dp"
                        android:text="Reseller"
                        android:textColor="@color/text_kind_grey"
                        android:textSize="@dimen/text_small" />


                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">


                    <CheckBox
                        android:id="@+id/importer_check"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:padding="5dp" />

                    <com.planty.app.customviews.F1TextViewRegular
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="3dp"
                        android:text="Importer"
                        android:textColor="@color/text_kind_grey"
                        android:textSize="@dimen/text_small" />


                </LinearLayout>


            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="vertical">

            <com.planty.app.customviews.F1TextViewRegular
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="How many products are you selling ?"
                android:textColor="@color/bg_black"
                android:textSize="@dimen/text_small" />

            <Button
                android:id="@+id/button_selectop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="@drawable/home_card_bg"
                android:paddingLeft="20dp"
                android:paddingTop="15dp"
                android:paddingRight="20dp"
                android:paddingBottom="15dp"
                android:layout_marginTop="@dimen/margin_10"
                android:text="Select  an Option"
                android:textAllCaps="false"
                android:textColor="@color/text_kind_grey"
                android:textSize="@dimen/text_smalla" />

            <Spinner
                android:id="@+id/spinner_f_quant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                />


        </LinearLayout>
    </LinearLayout>

<LinearLayout
    android:id="@+id/proceed2_ly"
    android:layout_alignParentBottom="true"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <include layout="@layout/common_btn_ly_2"/>
</LinearLayout>


</RelativeLayout>