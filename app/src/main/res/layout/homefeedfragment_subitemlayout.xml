<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:paddingLeft="10dp"
    android:paddingTop="5dp"
    android:paddingRight="10dp">



        <RelativeLayout
            android:id="@+id/topcard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >
                <com.planty.app.customviews.F1TextViewRegular
        android:id="@+id/cat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:padding="5dp"
        android:text="Tempered Glass"
        android:textColor="@color/text_kind_grey"
        android:textSize="@dimen/text_small" />


       <com.planty.app.customviews.F1TextViewLight
           android:id="@+id/addproductbutton"
           android:layout_alignParentEnd="true"
           android:layout_marginTop="@dimen/margin_5"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Add products"
           android:textColor="@color/bg_blue"

           />
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/middlecard"
            android:layout_below="@+id/topcard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="@dimen/margin_15"
            >
            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:cardCornerRadius="3dp"
                >
            <TextView

                android:id="@+id/activebutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enabled(25)"
                android:background="#21BA45"
                android:padding="10dp"
                android:textColor="@color/white2"


                />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:cardCornerRadius="3dp"
                >
            <TextView
                android:id="@+id/inactivebutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Disabled(25)"
                android:background="#00B5AD"
                android:padding="10dp"
                android:textColor="@color/white2"
                android:layout_marginLeft="10dp"

                />
            </android.support.v7.widget.CardView>



        </LinearLayout>
<View
    android:layout_below="@id/middlecard"
    android:layout_width="match_parent"
    android:layout_height="3dp"
    android:layout_marginTop="@dimen/margin_10"
    android:background="@color/bg_grey_3"/>


</RelativeLayout>